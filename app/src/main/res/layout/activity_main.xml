<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".MainActivity">

    <TextView
        android:textColor="#6B696E"
        android:fontFamily="sans-serif-black"
        android:textSize="40sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Picker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="69dp" />

    <Button
        android:layout_marginTop="130dp"
        android:id="@+id/myImagesButton"
        app:layout_constraintTop_toBottomOf="@id/textView"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textSize="25sp"
        android:text="My Images"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="181dp" />

    <Button
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/myImagesButton"
        android:id="@+id/ImageSearchButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textSize="25dp"
        android:text="Image search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="362dp" />

    <Button
        android:id="@+id/takePictureButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textSize="25sp"
        android:text="Take picture"
        app:layout_constraintTop_toBottomOf="@id/ImageSearchButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>